# QuickQuack Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED - Supabase (Database & Auth)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# REQUIRED - Google OAuth (Sign In & Calendar)
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# Make sure to enable the Google Calendar API

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# =============================================================================
# REQUIRED - App URL
# =============================================================================
# Your app's public URL (used for email links and OAuth callbacks)
# For local development: http://localhost:3000
# For production: https://your-domain.com

NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# REQUIRED - Email Notifications (Resend)
# =============================================================================
# Sends booking confirmations with calendar invites, reminders, and updates
# Get your API key from: https://resend.com/api-keys

RESEND_API_KEY=re_your-api-key
EMAIL_FROM=QuickQuack <bookings@yourdomain.com>

# =============================================================================
# OPTIONAL - Payments (Stripe)
# =============================================================================
# Accept payments for bookings
# Get your keys from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# OPTIONAL - Cron Security
# =============================================================================
# Secure the automated reminder email endpoint
# Generate with: openssl rand -base64 32

CRON_SECRET=your-random-secret
